{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
          "warn",
          {
            "selector": "objectLiteralProperty",
            "format": null,
            "leadingUnderscore": "allow",
            "trailingUnderscore": "allow",
            "custom": {
                "regex": "[a-zA-Z0-9\\-_\\. ]+",
                "match": true
            } 
          },
          {
            "selector": "default",
            "format": ["camelCase", "UPPER_CASE", "PascalCase"]
          },
          {
            "selector": "variable",
            "format": ["camelCase", "UPPER_CASE", "PascalCase"]
          },
          {
            "selector": "parameter",
            "format": ["camelCase"],
            "leadingUnderscore": "allow"
          },
          {
            "selector": "property",
            "format": ["camelCase", "UPPER_CASE", "PascalCase"],
            "leadingUnderscore": "allow"
          },
          {
            "selector": "memberLike",
            "modifiers": ["private"],
            "format": ["camelCase"],
            "leadingUnderscore": "allow"
          },
          {
            "selector": "memberLike",
            "modifiers": ["public", "static", "readonly"],
            "format": ["UPPER_CASE"],
            "leadingUnderscore": "forbid"
          },
          {
            "selector": "typeLike",
            "format": ["PascalCase"]
          }
        ],
        "@typescript-eslint/semi": "warn",
        "camelcase": "off",
        "curly": "off",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off"
      }
}
